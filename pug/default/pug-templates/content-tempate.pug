//----------------------------------------------------------
mixin content-roof-area(breadcrumbs)
  .content-roof-area
    .btn-group
      a.back-btn(href="#")
        i 
        span Вернуться
    .breadcrumbs
      a(href="#")= breadcrumbs
//----------------------------------------------------------
mixin content-head(title, type)
  .content-head.content-grid
    h1= title
    if type == "cabinet"
      .btn-group 
        a.btn(href="#") Профиль
    if type == "salon"
      .content-head-container
        .btn-group 
          a.btn(href="#") Метро, район
        .salon-count
          | Всего: 52
//----------------------------------------------------------
mixin sidebar-cabinet(massEl)
  .content-sidebar-area
    .cabinet-sidebar
      h2 
        span Управление
        i
      .cabinet-sidebar-container 
        h3 Головной офис 
        ul.ln
          each val,index in massEl
            li
              a(href="#") 
                span 
                  = val
                span
                  |0
                  = index + 1
//----------------------------------------------------------
mixin banner-cabinet(img, title, secondTitlem, text, btnText )
  .cabinet-banner
    .img-cover
      img(src=img)
    .main-grid
      .cabinet-banner-head
        h2
          =title
        h3 
          =secondTitlem
      .banner-text 
        = text
        .btn-container
          a.btn(href="#")
            = btnText
